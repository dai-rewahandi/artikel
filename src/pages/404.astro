---
import Layouts from '../layouts/Layouts.astro';
---

<Layouts title='404' desc='Halaman tidak ditemukan' ogImage='og-404.png'>
  <h2 class='text-4xl font-bold'>404</h2>
  <p>Halaman yang anda cari tidak ditemukan.</p>
  <sub>Anda akan dialihkan kehalaman utama dalam <span id='countdown'>5</span> detik!</sub>
</Layouts>

<script>
  let second = 5;
  setInterval(() => {
    if (second > 0) {
      second--;
      const countdownElement = document.getElementById('countdown');
      if (countdownElement) {
        countdownElement.innerHTML = second.toString();
      }
    } else {
      window.location.href = '/';
    }
  }, 1000);
</script>
